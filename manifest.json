{
	"manifest_version" : 2,

	"name" : "super1click2cart",
	"description" : "Easily add all combinations of different colors/sizes/etc to shopping cart, available for alibaba/taobao/tmall.",
	"version" : "0.2",
	// "icons": {
	// 	"16":  "icon.png",
	// 	"48":  "icon-48.png",
	// 	"128": "icon-128.png"
	// },

	"options_page": "options.html",

	"permissions" : [
		"tabs",
		"http://item.taobao.com/*",
		"http://detail.1688.com/*"
	],

	"browser_action" : {
		"default_icon" : "icon.png",
		"default_title" : "super one click to shopping cart",
		"default_name" : "1 click 2 cart",
		"default_popup" : "popup.html"
	}

